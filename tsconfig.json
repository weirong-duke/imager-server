{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "typeRoots": [
      "./src/types"
    ],
    "paths": {
      "routes/*": ["./src/routes/*"],
      "types/*": ["./src/types/*"],
      "*": [
        "./src",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "./src"
  ]
}
